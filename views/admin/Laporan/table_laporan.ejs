<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="table" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id Karyawan</th>
                        <th>Nama Karyawan</th>
                        <th>Posisi Karyawan</th>
                        <th>Nomor Handphone</th>
                        <th>Absen Hadir</th>
                        <th>Izin</th>
                        <th>Cuti</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let=i=0; i < karyawan.length; i++ ){%>
                        <tr>
                            <td>
                                <%= karyawan[i].id_karyawan %>
                            </td>
                            <td>
                                <%= karyawan[i].nama_karyawan %>
                            </td>
                            <td>
                                <%= karyawan[i].posisi_karyawan %>
                            </td>
                            <td>
                                <%= karyawan[i].phone_number %>
                            </td>
                            <td>
                                <%= karyawan[i].idhadir.length %>
                            </td>
                            <td>
                                <%= karyawan[i].idizin.length %>
                            </td>
                            <td>
                                <%= karyawan[i].idcuti.length %>
                            </td>
                            <% } %>
                        </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>