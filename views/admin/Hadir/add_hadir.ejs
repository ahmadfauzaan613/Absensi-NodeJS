<div class="tab-pane fade" id="add-data" role="tabpanel" aria-labelledby="profile-tab">

    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/view_hadir" method="POST">
                <div class="form-group">
                    <label for="id_karyawan">ID karyawan & Nama karyawan</label>
                    <select class="form-control" name="idKaryawan">
                        <option value="">-- ID & Nama ----</option>
                        <% for(let i=0; i < karyawan.length; i++ ){ %>
                            <option value="<%= karyawan[i].id %>">
                                <%= karyawan[i].id_karyawan %> - <%= karyawan[i].nama_karyawan %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Absen masuk</label>
                    <input type="datetime-local" class="form-control" name="absen_masuk" required>
                </div>
                <button type="submit" class="btn btn-primary">Absen Masuk</button>
            </form>
        </div>
    </div>
</div>