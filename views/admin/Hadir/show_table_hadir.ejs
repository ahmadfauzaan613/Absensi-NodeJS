<div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="home-tab">
    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id Karyawan</th>
                            <th>Nama Karyawan</th>
                            <th>Posisi Karyawan</th>
                            <th>Absen Masuk</th>
                            <th>Action</th>


                        </tr>
                    </thead>
                    <tbody>
                        <% for(let=i=0; i < hadir.length; i++ ){%>
                            <tr>
                                <td>
                                    <%= karyawan[i].id_karyawan %>
                                </td>
                                <td>
                                    <%= karyawan[i].nama_karyawan %>
                                </td>
                                <td>
                                    <%= karyawan[i].posisi_karyawan %>
                                </td>
                                <td>
                                    <%= hadir[i].absen_masuk.toLocaleString().split(',')[0] %>
                                </td>
                                <td>
                                    <form action="/admin/view_hadir/<%= hadir[i].id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-sm btn-danger btn-circle"><i
                                                class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>