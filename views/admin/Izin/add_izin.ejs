<div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/view_izin" method="POST">
                <div class="form-group">
                    <label for="karyawanid">ID karyawan & Nama karyawan</label>
                    <select class="form-control" name="karyawanid">
                        <option value="">-- ID & Nama ----</option>
                        <% for(let i=0; i < karyawan.length; i++ ){ %>
                            <option value="<%= karyawan[i].id %>">
                                <%= karyawan[i].id_karyawan %> - <%= karyawan[i].nama_karyawan %>
                            </option>
                            <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Tanggal izin</label>
                    <input type="datetime-local" class="form-control" name="tanggal_izin" required>
                </div>
                <div class="form-group">
                    <label for="name">Alasan izin</label>
                    <input type="text" class="form-control" name="alasan_izin" required>
                </div>
                <button type="submit" class="btn btn-primary">Pengajuan Izin</button>
            </form>
        </div>
    </div>
</div>