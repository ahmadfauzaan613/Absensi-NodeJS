<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
            <i class="fas fa-plus"> Add</i>
        </button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="table" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id Karyawan</th>
                        <th>Nama Karyawan</th>
                        <th>Posisi Karyawan</th>
                        <th>Nomor Handphone</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    <% for(let=i=0; i < karyawan.length; i++ ){%>
                        <tr>
                            <td>
                                <%= karyawan[i].id_karyawan %>
                            </td>
                            <td>
                                <%= karyawan[i].nama_karyawan %>
                            </td>
                            <td>
                                <%= karyawan[i].posisi_karyawan %>
                            </td>
                            <td>
                                <%= karyawan[i].phone_number %>
                            </td>
                            <td>
                                <form action="/admin/view_karyawan/<%= karyawan[i].id %>?_method=DELETE" method="POST">
                                    <a href="javascript:void()" type="button"
                                        class="btn btn-warning btn-circle btn-sm button-update"
                                        data-id="<%= karyawan[i].id %>"
                                        data-id_karyawan="<%= karyawan[i].id_karyawan %>"
                                        data-nama_karyawan="<%= karyawan[i].nama_karyawan %>"
                                        data-posisi_karyawan="<%= karyawan[i].posisi_karyawan %>"
                                        data-phone_number="<%= karyawan[i].phone_number %>">
                                        <i class=" fas fa-edit">
                                        </i>
                                    </a>
                                    <button type="submit" class="btn btn-sm btn-danger btn-circle"><i
                                            class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                </tbody>

            </table>
        </div>
    </div>
</div>